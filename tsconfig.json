{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "ESNext",                
    "lib": ["ESNext"],                
    "outDir": "./dist",              
    "rootDir": "./src",              
    "strict": true,                    
    "moduleResolution": "Node",       
    "esModuleInterop": true,         
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"  
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
